<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

                <ImageView

                    android:layout_marginTop="60dp"
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/perfil"
                    app:tint="@color/light_transparent"/>

            <TextView

                android:id="@+id/tx_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textSize="20sp"
                tools:text="@string/NSS_profiletest"
                android:textColor="@android:color/transparent"
                android:background="@color/light_transparent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CURP:"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textStyle="bold"
                        android:textColor="@android:color/transparent"
                        android:background="@color/light_transparent"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tx_curp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:text="012345678901234567"
                        android:textStyle="bold"
                        android:textColor="@android:color/transparent"
                        android:background="@color/light_transparent"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@color/light_transparent"
                    android:layout_marginRight="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RFC:"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:textColor="@android:color/transparent"
                        android:background="@color/light_transparent"/>

                    <TextView
                        android:id="@+id/tx_rfc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XAXX010101000"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textStyle="bold"
                        android:textColor="@android:color/transparent"
                        android:background="@color/light_transparent"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TelÃ©fono:"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:textColor="@android:color/transparent"
                        android:background="@color/light_transparent"/>

                    <TextView
                        android:id="@+id/tx_tel"
                        android:text="0123456789"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textStyle="bold"
                        android:textColor="@android:color/transparent"
                        android:background="@color/light_transparent"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@color/light_transparent"
                    android:layout_marginRight="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correo:"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:textColor="@android:color/transparent"
                        android:background="@color/light_transparent"/>

                    <TextView
                        android:id="@+id/tx_correo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textStyle="bold"
                        android:text="user@gmail.com"
                        android:textColor="@android:color/transparent"
                        android:background="@color/light_transparent"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
